<<h1>購入商品一覧</h1>
<% if user_signed_in? %>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>値段</th>
        <th>購入者</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td>¥<%= item.price %></td>
          <td><%= item.user.nickname.present? ? "#{item.user.nickname}" : "会員No. #{item.user.id}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <P>ログインしてください</P>
<% end %>
